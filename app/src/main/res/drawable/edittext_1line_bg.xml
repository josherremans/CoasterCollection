<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:angle="90" android:endColor="@color/colorSpinnerGradientEnd" android:startColor="@color/colorSpinnerGradientStart" android:type="linear" />
                    <stroke android:width="0dp" android:color="#504a4b" />
                    <corners android:radius="0dp" />
                    <padding android:bottom="1dp" android:left="3dp" android:right="3dp" android:top="1dp" />
                </shape>
            </item>
            <item android:top="20dp">
                <shape android:shape="line">
                    <stroke android:width="1dp" android:color="#666666" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>