<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="@color/colorSpinnerGradientEnd" android:startColor="@color/colorSpinnerGradientStart" android:type="linear" />
                    <stroke android:width="1dp" android:color="#504a4b" />
                    <corners android:radius="5dp" />
                    <padding android:bottom="1dp" android:left="3dp" android:right="3dp" android:top="1dp" />
                </shape>
            </item>
            <item >
                <bitmap android:gravity="center_vertical|right" android:src="@drawable/ic_drop_down_black" />   // you can use any other image here, instead of default_holo_dark_am
            </item>
        </layer-list>
    </item>
</selector>